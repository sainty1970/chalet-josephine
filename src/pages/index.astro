---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import PropertyHighlights from '../components/sections/PropertyHighlights.astro';
import Reviews from '../components/sections/Reviews.astro';
import CallToAction from '../components/sections/CallToAction.astro';
---

<BaseLayout>
  <Hero />
  <PropertyHighlights />

  <!-- Location Section -->
  <section class="section-spacing">
    <div class="container">
      <div class="location-content">
        <div class="location-text">
          <h2>Les Bois, Chamonix Mont-Blanc</h2>
          <p class="location-description">
            Nestled in the exclusive Les Bois area, Chalet Josephine offers the perfect blend of tranquility
            and accessibility. Just minutes from Chamonix's vibrant town center, yet surrounded by pristine
            Alpine nature and commanding views of Mont Blanc.
          </p>
          <ul class="location-features">
            <li>5 minutes to Chamonix town center</li>
            <li>Ski-in/ski-out access to BrÃ©vent-FlÃ©gÃ¨re</li>
            <li>Walking distance to restaurants and shops</li>
            <li>Private, peaceful setting with mountain views</li>
          </ul>
          <a href="/area-guide" class="btn btn-primary">Explore the Area</a>
        </div>
        <div class="location-image">
          <div class="placeholder-image">
            <p>ðŸ“¸ Chalet Josephine<br/>& Mont Blanc Views</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Reviews />

  <!-- Gallery Preview -->
  <section class="section-spacing bg-pearl">
    <div class="container">
      <div class="section-header">
        <h2>Step Inside</h2>
        <p class="section-subtitle">
          Discover every corner of your Alpine sanctuary
        </p>
      </div>

      <div class="gallery-preview">
        <div class="gallery-grid">
          {[1,2,3,4,5,6].map(i => (
            <div class="gallery-item">
              <div class="placeholder-image">
                <p>ðŸ“¸ Photo {i}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="gallery-cta">
        <a href="/gallery" class="btn btn-primary">View Full Gallery</a>
      </div>
    </div>
  </section>

  <CallToAction />
</BaseLayout>

<style>
  .location-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  @media (max-width: 1024px) {
    .location-content {
      grid-template-columns: 1fr;
    }
  }

  .location-text h2 {
    font-size: var(--text-4xl);
    color: var(--color-charcoal);
    margin-bottom: var(--space-6);
  }

  .location-description {
    font-size: var(--text-lg);
    color: var(--color-slate);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .location-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-8);
  }

  .location-features li {
    padding-left: var(--space-6);
    margin-bottom: var(--space-3);
    position: relative;
    color: var(--color-charcoal);
  }

  .location-features li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-alpine);
    font-weight: bold;
  }

  .location-image,
  .gallery-item {
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .placeholder-image {
    aspect-ratio: 4 / 3;
    background: linear-gradient(135deg, var(--color-stone) 0%, var(--color-pearl) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: var(--color-slate);
    font-size: var(--text-xl);
    padding: var(--space-4);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-header h2 {
    font-size: var(--text-4xl);
    color: var(--color-charcoal);
    margin-bottom: var(--space-4);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-slate);
    max-width: 600px;
    margin: 0 auto;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    margin-bottom: var(--space-12);
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }

  .gallery-cta {
    text-align: center;
  }
</style>
