    color: var(--color-charcoal);
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--color-alpine);
  }
  .dining-list {
    list-style: none;
    padding: 0;
  }
  .dining-list li {
    padding: var(--space-4) 0;
    border-bottom: 1px solid var(--color-stone);
  }
  .dining-list li:last-child { border-bottom: none; }
  .dining-list strong {
    display: block;
    color: var(--color-charcoal);
    margin-bottom: var(--space-1);
  }
  .dining-list span {
    font-size: var(--text-sm);
    color: var(--color-slate);
  }

  .activities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }
  @media (max-width: 1024px) { .activities-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (max-width: 640px) { .activities-grid { grid-template-columns: 1fr; } }

  .activity-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: box-shadow var(--transition-base);
  }
  .activity-card:hover { box-shadow: var(--shadow-md); }
  .activity-icon { font-size: 2.5rem; margin-bottom: var(--space-4); }
  .activity-card h3 {
    font-size: var(--text-lg);
    color: var(--color-charcoal);
    margin-bottom: var(--space-3);
  }
  .activity-card p {
    font-size: var(--text-sm);
    color: var(--color-slate);
    line-height: var(--leading-relaxed);
  }

  .travel-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }
  @media (max-width: 1024px) { .travel-grid { grid-template-columns: 1fr; } }

  .travel-card {
    padding: var(--space-8);
    background: var(--color-pearl);
    border-radius: var(--radius-xl);
  }
  .travel-card h3 {
    font-size: var(--text-xl);
    color: var(--color-charcoal);
    margin-bottom: var(--space-4);
  }
  .travel-card p {
    font-size: var(--text-sm);
    color: var(--color-slate);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }
  .travel-card ul {
    list-style: none;
    padding: 0;
  }
  .travel-card li {
    font-size: var(--text-sm);
    color: var(--color-charcoal);
    padding: var(--space-1) 0;
    padding-left: var(--space-4);
    position: relative;
  }
  .travel-card li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--color-alpine);
  }

  .mb-12 { margin-bottom: var(--space-12); }
</style>
