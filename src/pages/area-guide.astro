<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-charcoal) 0%, var(--color-alpine) 100%);
    padding: var(--space-20) 0;
    text-align: center;
    color: white;
  }
  .page-hero h1 { color: white; margin-bottom: var(--space-4); }
  .page-hero-subtitle { font-size: var(--text-xl); color: rgba(255,255,255,0.9); }

  .text-center { text-align: center; }

  .intro-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: start;
  }
  @media (max-width: 1024px) { .intro-content { grid-template-columns: 1fr; } }

  .intro-text h2 { margin-bottom: var(--space-6); }
  .intro-text p {
    color: var(--color-slate);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
    font-size: var(--text-lg);
  }

  .intro-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
  }
  .stat-item {
    text-align: center;
    padding: var(--space-8);
    background: var(--color-pearl);
    border-radius: var(--radius-xl);
  }
  .stat-number {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    color: var(--color-alpine);
    font-weight: bold;
    margin-bottom: var(--space-2);
  }
  .stat-label {
    font-size: var(--text-sm);
    color: var(--color-slate);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }
  .section-header h2 {
    font-size: var(--text-4xl);
    color: var(--color-charcoal);
    margin-bottom: var(--space-4);
  }
  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-slate);
    max-width: 600px;
    margin: 0 auto;
  }

  .ski-areas {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
  }
  @media (max-width: 1024px) { .ski-areas { grid-template-columns: 1fr; } }

  .ski-area-card {
    background: white;
    border: 2px solid var(--color-stone);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    transition: border-color var(--transition-base);
  }
  .ski-area-card:hover { border-color: var(--color-alpine); }
  .ski-area-card.featured { border-color: var(--color-alpine); }
  .ski-area-card h3 {
    font-size: var(--text-xl);
    color: var(--color-charcoal);
    margin-bottom: var(--space-1);
  }
  .ski-distance {
    font-size: var(--text-sm);
    color: var(--color-alpine);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }
  .ski-area-card p {
    color: var(--color-slate);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
  }
  .ski-stats {
    list-style: none;
    padding: 0;
    border-top: 1px solid var(--color-stone);
    padding-top: var(--space-4);
  }
  .ski-stats li {
    font-size: var(--text-sm);
    color: var(--color-slate);
    padding: var(--space-1) 0;
  }

  .dining-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-10);
  }
  @media (max-width: 1024px) { .dining-grid { grid-template-columns: 1fr; } }

  .dining-category h3 {
