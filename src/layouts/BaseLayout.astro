---
/**
 * BaseLayout.astro
 * Base layout component for all pages
 * Includes head, SEO, navigation, and footer
 */

import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import StructuredData from '../components/seo/StructuredData.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  structuredDataPage?: 'home' | 'about' | 'gallery' | 'availability' | 'area-guide' | 'contact';
  breadcrumbs?: { name: string; url: string }[];
  preloadImage?: string;
}

const {
  title = 'Chalet Josephine | Luxury 6-Bedroom Ski Chalet in Chamonix',
  description = 'Experience ultimate luxury in our 6-bedroom ski chalet in Les Bois, Chamonix. Managed by Chamonix Prestige, featuring stunning Mont Blanc views and premium amenities.',
  image = '/images/og-image.jpg',
  structuredDataPage = 'home',
  breadcrumbs,
  preloadImage,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Fonts: preconnect + display=optional to eliminate CLS from font swap -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;600;700;900&display=optional" />

    <!-- Preload LCP image if specified -->
    {preloadImage && <link rel="preload" as="image" href={preloadImage} fetchpriority="high" />}

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BNGYXG3EE1"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-BNGYXG3EE1');
    </script>

    <!-- Structured Data -->
    <StructuredData page={structuredDataPage} breadcrumbs={breadcrumbs} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
