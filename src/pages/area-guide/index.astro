---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AreaGuideNav from '../../components/layout/AreaGuideNav.astro';
import CallToAction from '../../components/sections/CallToAction.astro';
---

<BaseLayout
  title="Area Guide: Chamonix Mont-Blanc | Chalet Josephine"
  description="Discover Chamonix Mont-Blanc: world-class skiing, Michelin-starred dining, summer hiking, and adventure sports. Your complete guide to the Alpine capital."
  structuredDataPage="area-guide"
  breadcrumbs={[{ name: "Area Guide", url: "/area-guide" }]}
>
  <!-- Page Hero -->
  <section class="page-hero">
    <div class="container">
      <h1>Chamonix Mont-Blanc</h1>
      <p class="page-hero-subtitle">The Alpine capital of the world</p>
    </div>
  </section>

  <AreaGuideNav current="/area-guide" />

  <!-- Introduction -->
  <section class="section-spacing intro-section">
    <div class="container">
      <div class="intro-content">
        <div class="intro-text">
          <h2>Welcome to Chamonix</h2>
          <p>
            Nestled at the foot of Mont Blanc — Europe's highest peak at 4,808 metres — Chamonix Mont-Blanc
            is one of the world's most celebrated Alpine destinations. This legendary town has been drawing
            adventurers, skiers, and nature lovers since it hosted the first Winter Olympics in 1924.
          </p>
          <p>
            Chamonix is a true year-round Alpine destination, offering world class piste and off-piste
            skiing in winter and spring, plus incredible hiking, golf, mountain biking, road cycling,
            mountaineering and much more throughout the rest of the year.
          </p>
          <p>
            From Chalet Josephine in the exclusive Les Bois neighbourhood, you are perfectly positioned
            to experience everything this extraordinary destination offers. Whether you're carving turns
            on world-famous ski runs, dining at acclaimed restaurants, or simply soaking in the breathtaking
            views of the Mont Blanc massif, Chamonix never disappoints.
          </p>
        </div>
        <div class="intro-stats">
          <div class="stat-item">
            <div class="stat-number">4,808m</div>
            <div class="stat-label">Mont Blanc altitude</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">170km</div>
            <div class="stat-label">Ski runs</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">1924</div>
            <div class="stat-label">First Winter Olympics</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">600km+</div>
            <div class="stat-label">Of hiking trails</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Category Cards -->
  <section class="section-spacing bg-pearl">
    <div class="container">
      <div class="category-grid">
        <a href="/area-guide/skiing" class="category-card">
          <div class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3 20l5.5-5.5M8.5 14.5L12 8l2 4 4.5-2M15 6.5a1.5 1.5 0 100-3 1.5 1.5 0 000 3zM5 20h14" /></svg></div>
          <h3>Skiing / Winter Sports</h3>
          <p>World-class ski areas, ski schools, guiding, and ski touring in the Chamonix valley</p>
        </a>
        <a href="/area-guide/hiking" class="category-card">
          <div class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3 21l6-6m0 0l3-8 4 6 5-7M9 15l-3 1M15 13l3.5 1" /><circle cx="15" cy="4.5" r="1.5" /></svg></div>
          <h3>Hiking</h3>
          <p>600km+ of trails including the legendary Tour du Mont Blanc</p>
        </a>
        <a href="/area-guide/cycling" class="category-card">
          <div class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><circle cx="6.5" cy="17" r="3.5" /><circle cx="17.5" cy="17" r="3.5" /><path stroke-linecap="round" stroke-linejoin="round" d="M6.5 17l3-8h4l1.5 3.5L17.5 17M10 9l2-4" /></svg></div>
          <h3>Cycling</h3>
          <p>Road cycling, mountain biking, and e-bike adventures in stunning Alpine scenery</p>
        </a>
        <a href="/area-guide/golf" class="category-card">
          <div class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v12m0 0c-2.5 0-5 1.5-5 3s2.5 3 5 3 5-1.5 5-3-2.5-3-5-3z" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 3l7 4.5L12 12" /></svg></div>
          <h3>Golf & Other</h3>
          <p>Golf, paragliding, spa & wellness, and more year-round activities</p>
        </a>
        <a href="/area-guide/sightseeing" class="category-card">
          <div class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2 20h20M4 20l5-14 4 8 3-6 5 12" /><path stroke-linecap="round" stroke-linejoin="round" d="M14.5 7l1-2.5L17 7" /></svg></div>
          <h3>Sightseeing</h3>
          <p>Aiguille du Midi, Mer de Glace, and the most breathtaking views in the Alps</p>
        </a>
        <a href="/area-guide/restaurants" class="category-card">
          <div class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8.25v-1.5m0 1.5c-1.355 0-2.697.056-4.024.166C6.845 8.51 6 9.473 6 10.608v2.513m6-4.871c1.355 0 2.697.056 4.024.166C17.155 8.51 18 9.473 18 10.608v2.513M15 9.75l-3-1.5-3 1.5M4.5 18.75h15a1.5 1.5 0 001.5-1.5v-1.5a1.5 1.5 0 00-1.5-1.5h-15a1.5 1.5 0 00-1.5 1.5v1.5a1.5 1.5 0 001.5 1.5z" /></svg></div>
          <h3>Restaurants & Bars</h3>
          <p>From Michelin-starred fine dining to cosy mountain restaurants and lively après-ski</p>
        </a>
        <a href="/area-guide/transport" class="category-card">
          <div class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" /></svg></div>
          <h3>Transport</h3>
          <p>Getting to Chamonix by air, rail, and road — plus local transport options</p>
        </a>
      </div>
    </div>
  </section>

  <CallToAction
    title="Ready to Explore Chamonix?"
    description="Book Chalet Josephine and experience everything this extraordinary destination has to offer."
    primaryButtonText="Check Availability"
    primaryButtonHref="/availability"
    secondaryButtonText="View the Chalet"
    secondaryButtonHref="/about"
  />
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-charcoal) 0%, var(--color-alpine) 100%);
    padding: var(--space-20) 0;
    text-align: center;
    color: white;
  }
  .page-hero h1 { color: white; margin-bottom: var(--space-4); }
  .page-hero-subtitle { font-size: var(--text-xl); color: rgba(255,255,255,0.9); }

  .intro-section { padding-bottom: var(--space-12); }
  @media (min-width: 1024px) { .intro-section { padding-bottom: var(--space-16); } }

  .intro-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: start;
  }
  @media (max-width: 1024px) { .intro-content { grid-template-columns: 1fr; } }

  .intro-text h2 { margin-bottom: var(--space-6); }
  .intro-text p {
    color: var(--color-slate);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
    font-size: var(--text-lg);
  }

  .intro-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
  }
  .stat-item {
    text-align: center;
    padding: var(--space-8);
    background: var(--color-pearl);
    border-radius: var(--radius-xl);
  }
  .stat-number {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    color: var(--color-alpine);
    font-weight: bold;
    margin-bottom: var(--space-2);
  }
  .stat-label {
    font-size: var(--text-sm);
    color: var(--color-slate);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }

  .category-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    text-align: center;
    text-decoration: none;
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }
  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  .category-icon {
    width: 3rem;
    height: 3rem;
    color: var(--color-gold);
    margin-bottom: var(--space-2);
  }
  .category-icon svg {
    width: 100%;
    height: 100%;
  }
  .category-card h3 {
    font-size: var(--text-lg);
    color: var(--color-charcoal);
  }
  .category-card p {
    font-size: var(--text-sm);
    color: var(--color-slate);
    line-height: var(--leading-relaxed);
  }
</style>
