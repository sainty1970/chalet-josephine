---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import PropertyHighlights from '../components/sections/PropertyHighlights.astro';
import Reviews from '../components/sections/Reviews.astro';
import CallToAction from '../components/sections/CallToAction.astro';
---

<BaseLayout preloadImage="/images/Winter Exterior Rouges 2.jpg">
  <Hero />
  <PropertyHighlights />

  <!-- Location Section -->
  <section class="section-spacing">
    <div class="container">
      <div class="location-content">
        <div class="location-text">
          <h2>Les Bois, Chamonix Mont-Blanc</h2>
          <p class="location-description">
            Nestled in the exclusive Les Bois area, Chalet Josephine offers the perfect blend of tranquility
            and accessibility. Just minutes from Chamonix's vibrant town center, yet surrounded by pristine
            Alpine nature and commanding views of Mont Blanc.
          </p>
          <ul class="location-features">
            <li>5 minutes drive to Chamonix town centre</li>
            <li>Walking distance to Brevent-Flegere ski area</li>
            <li>1 minute walk to bus stop for access to all areas</li>
            <li>Walking distance to, restaurants, bars and excellent golf course</li>
            <li>Private, peaceful setting with stunning mountain views</li>
          </ul>
          <a href="/area-guide" class="btn btn-primary">Explore the Area</a>
        </div>
        <div class="location-image">
          <img src="/images/Summer Deck View 2.jpg" alt="Chalet Josephine with Mont Blanc views" width="1920" height="1280" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <Reviews />

  <!-- Gallery Preview -->
  <section class="section-spacing bg-pearl">
    <div class="container">
      <div class="section-header">
        <h2>Step Inside</h2>
        <p class="section-subtitle">
          Discover every corner of your Alpine sanctuary
        </p>
      </div>

      <div class="gallery-preview">
        <div class="gallery-grid">
          <div class="gallery-item">
            <a href="/gallery"><img src="/images/Salon 1.jpg" alt="Main living room" loading="lazy" /></a>
          </div>
          <div class="gallery-item">
            <a href="/gallery"><img src="/images/Master Bed 1.jpg" alt="Master bedroom" loading="lazy" /></a>
          </div>
          <div class="gallery-item">
            <a href="/gallery"><img src="/images/Kitchen 4.jpg" alt="Gourmet kitchen" loading="lazy" /></a>
          </div>
          <div class="gallery-item">
            <a href="/gallery"><img src="/images/Winter Balcony View 1.jpg" alt="Mont Blanc views" loading="lazy" /></a>
          </div>
          <div class="gallery-item">
            <a href="/gallery"><img src="/images/Sauna 2.jpg" alt="Private sauna" loading="lazy" /></a>
          </div>
          <div class="gallery-item">
            <a href="/gallery"><img src="/images/Dining 3.jpg" alt="Dining area" loading="lazy" /></a>
          </div>
        </div>
      </div>

      <div class="gallery-cta">
        <a href="/gallery" class="btn btn-primary">View Full Gallery</a>
      </div>
    </div>
  </section>

  <CallToAction />
</BaseLayout>

<style>
  .location-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  @media (max-width: 1024px) {
    .location-content {
      grid-template-columns: 1fr;
    }
  }

  .location-text h2 {
    font-size: var(--text-4xl);
    color: var(--color-charcoal);
    margin-bottom: var(--space-6);
  }

  .location-description {
    font-size: var(--text-lg);
    color: var(--color-slate);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .location-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-8);
  }

  .location-features li {
    padding-left: var(--space-6);
    margin-bottom: var(--space-3);
    position: relative;
    color: var(--color-charcoal);
  }

  .location-features li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-alpine);
    font-weight: bold;
  }

  .location-image,
  .gallery-item {
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .location-image img,
  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 4/3;
    display: block;
  }

  .gallery-item a {
    display: block;
    transition: transform var(--transition-base);
  }

  .gallery-item a:hover {
    transform: scale(1.05);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-header h2 {
    font-size: var(--text-4xl);
    color: var(--color-charcoal);
    margin-bottom: var(--space-4);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-slate);
    max-width: 600px;
    margin: 0 auto;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    margin-bottom: var(--space-12);
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }

  .gallery-cta {
    text-align: center;
  }
</style>
